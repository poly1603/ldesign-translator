{
  "name": "@ldesign/translator",
  "version": "1.0.0",
  "description": "智能的国际化翻译管理工具，让多语言支持变得简单",
  "keywords": [
    "ldesign",
    "translator",
    "i18n",
    "translation",
    "google-translate",
    "baidu-translate",
    "deepl",
    "excel",
    "internationalization"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js",
      "require": "./dist/cli/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist",
    "templates",
    "bin"
  ],
  "bin": {
    "ldesign-translator": "./bin/cli.js",
    "ltranslator": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsup && npm run build:web",
    "build:web": "cd src/web && vite build",
    "dev": "tsup --watch",
    "dev:web": "cd src/web && vite",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "ejs": "^3.1.9",
    "cosmiconfig": "^9.0.0",
    "ignore": "^5.3.0",
    "@babel/parser": "^7.23.9",
    "@babel/traverse": "^7.23.9",
    "@babel/types": "^7.23.9",
    "@vue/compiler-sfc": "^3.4.15",
    "axios": "^1.6.7",
    "qs": "^6.11.2",
    "xlsx": "^0.18.5",
    "better-sqlite3": "^9.4.0",
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "md5": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/inquirer": "^9.0.7",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/babel__traverse": "^7.20.5",
    "@types/babel__core": "^7.20.5",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "@types/better-sqlite3": "^7.6.9",
    "@types/md5": "^2.3.5",
    "typescript": "^5.7.3",
    "tsup": "^8.0.0",
    "vitest": "^1.6.1",
    "rimraf": "^5.0.5",
    "vite": "^5.0.12",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "naive-ui": "^2.37.3",
    "@vitejs/plugin-vue": "^5.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}


